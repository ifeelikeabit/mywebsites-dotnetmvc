@model Product
<div class="w-full justify-center items-center h-[80vh] flex"
    style="background-image: url('/img/login-bg.jpg');background-size: cover;">
    <div class="w-full max-w-sm p-4 bg-transparent backdrop-blur rounded-2xl shadow sm:p-6 md:p-8 text-white font-bold">
        <h2><b>@Model.Name (Id:@Model.Id)</b></h2>
        <h4> adlı ürünü silmek istiyor musun?</h4>
        <form class="space-y-6" method="post" enctype="multipart/form-data">
            <input type="hidden" value="@Model.Id" asp-for="Id">
            <button type="submit"
                class=" text-white transition-all duration-500 bg-red-500 hover:bg-red-600 focus:ring-4 focus:outline-none focus:ring-red-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center ">Evet</button>
            <a class=" text-white transition-all duration-500 bg-green-500 hover:bg-green-600 focus:ring-4 focus:outline-none focus:ring-green-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center "
                asp-controller="Products" asp-action="Edit" asp-route-id="@Model.Id">Hayır</a>
        </form>
    </div>
</div>