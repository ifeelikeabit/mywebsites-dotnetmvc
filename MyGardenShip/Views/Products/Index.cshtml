@model IEnumerable<ProductViewModel>
@{
  ViewBag.Title = "Ürünler";
}
<style>
.background-container {
background-image: url('/img/login-bg.jpg');
background-size: cover;
background-position: center;
width: 100%;
height: 100vh;}
</style>

<div class="background-container flex flex-row gap-2 mt-2 p-1 flex-wrap">
  @foreach (var productViewModel in Model)
  {
    <a asp-controller="Products" asp-action="@productViewModel.Action" asp-route-id="@productViewModel.Product.Id">
      @await Html.PartialAsync("_Product", productViewModel.Product)
    </a>
  }
</div>
