<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - MyGardenShip</title>
    <link rel="stylesheet" href="/lib/flowbite/flowbite.min.css">


    <link href="https://cdnjs.cloudflare.com/ajax/libs/flowbite/2.3.0/flowbite.min.css" rel="stylesheet" />

    <script src="https://cdn.tailwindcss.com"></script>
    <script src="/lib/flowbite/flowbite.min.js"></script>

</head>

<body>
    @if (TempData["message"] != null)
    {
        <div
            class="absolute text-white bg-yellow-600 inline-block p-2 top-24 rounded-md left-[50%] translate-x-[-50%] translate-y-[-50%]">
            @TempData["message"]
        </div>
    }
    <header>
        @await Html.PartialAsync("_Navbar")
    </header>
    <div class="min-h-[80dvh] mt-[73px]">
        <main>@RenderBody()</main>
    </div>
    @await Html.PartialAsync("_Footer")
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="/lib/flowbite/flowbite.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/flowbite/2.3.0/flowbite.min.js"></script>
    <script>
        const uploadField = document.getElementById("imagee");

        uploadField.onchange = function () {
            if (this.files[0].size > 2097152) {
                alert("Resim boyutu çok yüksek");//translate to C#
                this.value = "";
            }
        };
    </script>
</body>

</html>