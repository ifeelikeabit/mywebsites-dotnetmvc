<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Mowbank</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/mowbank.styles.css" asp-append-version="true" />
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Mowbank</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1 gap-2">
                         <li class="nav-item">
                            <a class="btn btn-light" asp-area="" asp-controller="Home" asp-action="Index">Ana
                                Sayfa</a>
                        </li>
                        <li class="nav-item">
                            <a class="btn btn-light" asp-area="" asp-controller="Home" asp-action="About">Hakkımızda</a>
                        </li>
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                          
                                          <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Users"
                                    asp-action="Index">Kullanıcılar</a>
                                    </li>
                                    
                                     <li style="width: 200px;"><a class="nav-link text-dark" asp-area="" asp-controller="Profile"
                                    asp-action="Detailed">Merhaba, <span class="text-success">@User.Identity.Name</span></a></li>
}

                                   
                                 else{
                       
                        <li class="nav-item">
                            <a class="btn btn-success" asp-area="" asp-controller="Account" asp-action="Login">Giriş
                                Yap</a>
                        </li>
                        <li class="nav-item">
                            <a class="btn btn-primary" asp-area="" asp-controller="Account"
                                asp-action="Create">Kaydol</a>
                        </li>


}

                    </ul>
                </div>
            </div>
            @if (User.Identity?.IsAuthenticated == true)
{


           


            <a style="width: 150px;margin-right: 5px;" class=" btn btn-danger" asp-area="" asp-controller="Account"
                asp-action="Logout">
                Çıkış
                Yap</a>

}
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - Kullanıcı Bilgi Bankası - <a asp-area="" asp-controller="Home"
                asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
