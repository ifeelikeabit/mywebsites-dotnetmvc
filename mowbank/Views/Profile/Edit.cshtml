@model mowbank.ViewModels.EditViewModel
<div
    style="width: 100%;display:flex; flex-direction: column;align-items: center; min-height: 80vh;justify-content: center;">
    <h2>Profil Düzenleme</h2>

    <form asp-action="Edit" method="post" class="shadow-lg p-3 mb-5 bg-white rounded"
        style="width: 800px; display:flex; flex-direction: column;align-items: center;">
        <div asp-validation-summary="All" class="text-danger"></div>
        <input type="hidden" name="Id" value="@Model.Id">

        <table class="table table-striped">
            <tr>
                <th>Alan</th>
                <th>Değer</th>
            </tr>
            <tr>
                <td><label asp-for="UserName" class="form-label">Kullanıcı Adı</label></td>
                <td><input class="form-control" asp-for="UserName"></td>
            </tr>
            <tr>
                <td><label asp-for="Email" class="form-label">Email</label></td>
                <td><input class="form-control" asp-for="Email"></td>
            </tr>
            <tr>
                <td><label asp-for="Full_Name" class="form-label">Tam adı</label></td>
                <td><input class="form-control" asp-for="Full_Name"></td>
            </tr>
            <tr>
                <td><label asp-for="Adress" class="form-label">Adres</label></td>
                <td><input class="form-control" asp-for="Adress"></td>
            </tr>
            <tr>
                <td><label asp-for="Job" class="form-label">İş</label></td>
                <td><input class="form-control" asp-for="Job"></td>
            </tr>
            <tr>
                <td><label asp-for="age" class="form-label">Yaş</label></td>
                <td><input class="form-control" asp-for="age" type="number"></td>
            </tr>
            <tr>
                <td><label asp-for="gender" class="form-label">Cinsiyet</label></td>
                <td><input class="form-control" asp-for="gender"></td>
            </tr>
            <tr>
                <td><label asp-for="bio" class="form-label">Biyografi</label></td>
                <td><textarea class="form-control" asp-for="bio"></textarea></td>
            </tr>
            <tr>
                <td><label asp-for="hobby" class="form-label">Hobi</label></td>
                <td><input class="form-control" asp-for="hobby"></td>
            </tr>
            <tr>
                <td><label asp-for="nationality" class="form-label">Milliyet</label></td>
                <td><input class="form-control" asp-for="nationality"></td>
            </tr>
            <tr>
                <td><label asp-for="salary" class="form-label">Maaş</label></td>
                <td><input class="form-control" asp-for="salary" type="number" step="0.01"></td>
            </tr>
            <tr>
                <td><label asp-for="marital_status" class="form-label">Medeni hal</label></td>
                <td><input class="form-control" asp-for="marital_status"></td>
            </tr>
        </table>

        <div class="card mb-3" style="width: 400px;">
            <div class="card-header">
                Parola Güncelle
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <label asp-for="Password" class="form-label"></label>
                    <input class="form-control" asp-for="Password" type="password">
                </div>
                <div class="mb-3">
                    <label asp-for="ConfirmPassword" class="form-label"></label>
                    <input class="form-control" asp-for="ConfirmPassword" type="password">
                </div>
            </div>
        </div>

        <div style="width: 700px;">
            <button type="submits" class="btn btn-success" style="width: 700px;">Kaydet</button>
        </div>
    </form>
</div>
