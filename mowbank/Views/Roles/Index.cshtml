@using mowbank.Models
@model IEnumerable<AppRole>
<h2>Role List</h2>
<a href="/Roles/Create" class="btn btn-primary">Give Role</a>

<table class="table table table-sm table-border">

    <tr>
        <th>Id</th>
        <th>Role Adı</th>
        <th>Kullanıcılar</th>
    </tr>
    @if (Model.Count() == 0)
    {
        <tr>
            <td colspan="4" class="text-center">Role Yok</td>
        </tr>

    }
    @foreach (var role in Model)
    {
        <tr>
            <td>@role.Id</td>
            <td>@role.Name</td>
            <td>Kullanıcı Listesi</td>
            <td>
                <form method="post">
                      <a class="btn btn-sm btn-primary">Edit</a>
                   <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                </form>
            </td>
        </tr>
    }

</table>
