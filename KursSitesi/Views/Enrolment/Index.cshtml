@model IEnumerable<Course>

<h2>Course List</h2>

<form asp-controller="Course" asp-action="Index" method="get">
    <div class="form-group">
        <input type="text" name="searchString" class="form-control" placeholder="Search by name"
            value="@ViewData["CurrentFilter"]" />
    </div>
    <button type="submit" class="btn btn-primary">Search</button>
    <p></p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>Course Id</th>
            <th>Course Name</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count() == 0)
        {
            <tr>
                <td colspan="3" class="text-center">No course found</td>
            </tr>
        }
        @foreach (var course in Model)
        {
            <tr>
                <td>@course.CourseId</td>
                <td>@course.CourseName</td>
                <td>
                    <a asp-controller="Course" asp-action="Edit" asp-route-id="@course.CourseId"
                        class="btn btn-sm btn-primary">Edit</a>
                    <a asp-controller="Course" asp-action="Detailed" asp-route-id="@course.CourseId"
                        class="btn btn-sm btn-primary">Details</a>
                    <form asp-controller="Course" asp-controller="Course" asp-action="Delete"
                        asp-route-id="@course.CourseId" method="post" onsubmit="return confirm('Are you sure?')"
                        style="display: inline-block;">
                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                    </form>
                    <a asp-action="Courses" asp-route-studentId="@course.CourseId" class="btn btn-sm btn-primary"> <i
                            class="bi bi-person-fill-add"></i></a>

                </td>
            </tr>
        }
    </tbody>
</table>
