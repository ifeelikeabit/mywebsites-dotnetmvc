@model Student

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Student Details</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <style>
        body {
            font-family: 'Poppins', sans-serif;
            background: url('https://www.w3schools.com/w3images/lights.jpg') no-repeat center center fixed;
            background-size: cover;
            margin: 0;
            padding: 0;
            color: #333;
        }

        .container {
            margin-top: 50px;
        }

        .card {
            background-color: rgba(255, 255, 255, 0.9);
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            padding: 20px;
            margin-bottom: 30px;
        }

        .card-header {
            background-color: #7386D5;
            color: white;
            border-radius: 10px 10px 0 0;
            padding: 15px;
            text-align: center;
        }

        .card-body {
            padding: 20px;
        }

        .table {
            background-color: rgba(255, 255, 255, 0.9);
            border-radius: 10px;
            overflow: hidden;
        }

        .table th, .table td {
            padding: 15px;
            text-align: center;
        }

        .table th {
            background-color: #7386D5;
            color: white;
        }

        .table-striped tbody tr:nth-of-type(odd) {
            background-color: rgba(0, 0, 0, 0.05);
        }

        h2, h3 {
            color: #7386D5;
            text-align: center;
        }

        p {
            text-align: center;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="card">
            <div class="card-header">
                <h2>
                    @if (@Model.isTeacher) 
                    {
                        <span style="color: white">Öğretmen</span>
                    } 
                    else 
                    {
                        <span style="color: white">Öğrenci</span>
                    }
                </h2>
            </div>
            <div class="card-body">
                <table class="table table-bordered table-striped">
                    <tr>
                        <th>Field</th>
                        <th>Value</th>
                    </tr>
                    <tr>
                        <td>ID</td>
                        <td>@Model.StudentId</td>
                    </tr>
                    <tr>
                        <td>Firstname</td>
                        <td>@Model.StudentName</td>
                    </tr>
                    <tr>
                        <td>Surname</td>
                        <td>@Model.StudentSurname</td>
                    </tr>
                    <tr>
                        <td>Email</td>
                        <td>@Model.Email</td>
                    </tr>
                    <tr>
                        <td>Address</td>
                        <td>@Model.Adress</td>
                    </tr>
                    <tr>
                        <td>Phone Number</td>
                        <td>@Model.phoneNumber</td>
                    </tr>
                </table>
            </div>
        </div>

        <div class="card">
            <div class="card-header">
                <h3>Enrolled Courses</h3>
            </div>
            <div class="card-body">
                @if (Model.Enrolments != null && Model.Enrolments.Any())
                {
                    <table class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>Course Id</th>
                                <th>Course Name</th>
                                <th>Course Date</th>
                                <th>Start</th>
                                <th>End</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var studentCourse in Model.Enrolments)
                            {
                                <tr>
                                    <td>@studentCourse.Courses.CourseId</td>
                                    <td>@studentCourse.Courses.CourseName</td>
                                    <td>@studentCourse.Courses.CourseTime</td>
                                    <td>@studentCourse.Courses.start.ToString("hh:mm tt")</td>
                                    <td>@studentCourse.Courses.end.ToString("hh:mm tt")</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <p>This student is not enrolled in any courses.</p>
                }
            </div>
        </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
</body>
</html>
