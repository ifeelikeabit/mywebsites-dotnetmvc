@model Student
<p>

    <b>@Model.StudentName ID:@Model.StudentId</b> adli kaydı silmek istiyor musunuz ?
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-route-id="@Model.StudentId" > 
        <button type="submit" class="btn btn-danger">Evet</button>
        <a asp-action="Index" class="btn btn-primary">Hayır</a>
    </form>

</p> 


