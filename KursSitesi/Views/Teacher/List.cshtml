@model IEnumerable<Course>


<h2>Course List</h2>

<form asp-action="List" method="get">
    <div class="form-group">
        <input type="text" name="searchString" class="form-control" placeholder="Search by Course Name"
            value="@ViewData["CurrentFilter"]" />
    </div>
    <button type="submit" class="btn btn-primary">Search</button>
    <p></p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>Course Id</th>
            <th>Course Name</th>
            <th>Course Quota </th>
            <th>Course Date </th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count() == 0)
        {
            <tr>
                <td colspan="3" class="text-center">No course found</td>
            </tr>
        }
        @foreach (var course in Model)
        {
            <tr>
                <td>@course.CourseId</td>
                <td>@course.CourseName</td>
                <td>@course.quota</td>
                <td>@course.CourseTime</td>
                <td>
                 
                     <a asp-action="Join" asp-route-id="@course.CourseId" class="btn btn-sm btn-primary"><i class="bi bi-person-fill-add"></i></a>  
                     <a asp-action="Leave" asp-route-id="@course.CourseId" class="btn btn-sm btn-primary"><i class="bi bi-person-fill-dash"></i></a>                   
                </td>
            </tr>
        }
    </tbody>
</table>
