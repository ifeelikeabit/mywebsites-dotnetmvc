@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model RegisterViewModel
<div class="d-flex justify-content-center align-items-center vh-100">
    <div class="card shadow p-4" style="width: 22rem;">
        <h3 class="card-title text-center mb-4">Şirket Olştur 🛠️</h3>
        <form asp-action="Register" method="post">
             <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group mb-3">
                <label asp-for="Username">🖊️ Şirket Adı </label>
                <input  asp-for="Username" class="form-control"  required />
            </div>
            <div class="form-group mb-3">
                <label asp-for="Password">🖊️ Password</label>
                <input type="password" class="form-control" asp-for="Password" required />
            </div>
            <div class="form-group mb-3">
                <label asp-for="ConfirmPassword"> 🖊️ Confirm Password</label>
                <input type="password" class="form-control" asp-for="ConfirmPassword" required />
            </div>
            <button type="submit" class="btn btn-primary w-100">Şirket Oluştur</button>
               
        </form>
    </div>
</div>
