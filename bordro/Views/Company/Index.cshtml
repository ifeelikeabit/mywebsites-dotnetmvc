@model IEnumerable<bordro.Data.AppUser>

<h2>AppUsers List</h2>

<table class="table">
    <thead>
        <tr>
            <th>Şirket Adı</th>
            <th>Kuruluş Tarihi</th>
               @if(User.IsInRole("admin")){
            <th>İşlemler</th>}
        </tr>
    </thead>
    <tbody>
        @if (Model.Count() == 0)
        {
            <tr>
                <td colspan="4" class="text-center">Şirket Yok</td>
            </tr>
        }
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.UserName</td>
                <td>@user.Since</td>
                @if(User.IsInRole("admin")){
  <td>
                    <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-sm btn-primary">Edit</a>
                    <form asp-action="Delete" method="post" onsubmit="return confirm('emin misiniz?')"
                        style="display: inline-block;">
                        <input type="hidden" value="@user.Id" name="id">
                        <button type="submit" class="btn btn-danger btn-sm">Sil</button>
                    </form>

                </td>

                }
              
            </tr>
        }
    </tbody>
</table>
