@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model LoginViewModel

<div class="d-flex justify-content-center align-items-center ">
    <div class="card shadow p-4" style="width: 22rem;">
        <h3 class="card-title text-center mb-4">💼 Giriş Yap</h3>
        <form asp-action="Login" method="post">
            <div class="form-group mb-3">
                <label asp-for="Username">👤 Şirket Adı</label>
                <input asp-for="Username" class="form-control" required />
            </div>
            <div class="form-group mb-3">
                <label asp-for="Password">🔒 Şifre</label>
                <input type="password" class="form-control" asp-for="Password" required />
            </div>
            <div class="form-group form-check mb-3">
                <input type="checkbox" class="form-check-input" id="RememberMe" />
                <label class="form-check-label" for="RememberMe">Beni Hatırla</label>
            </div>
            <button type="submit" class="btn btn-primary w-100">🚀 Giriş</button>
           Hesabın yok mu ?  <a href="Register">Hemen oluştur 📋</a>
        </form>
    </div>
</div> 
