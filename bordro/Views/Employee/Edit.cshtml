@model EmployeeViewModel

<div class="card shadow p-4" style="width: 22rem;">
    <h3 class="card-title text-center mb-4">Çalışan Bilgilerini Düzenle</h3>
    <form asp-action="Edit" method="post">
        <div asp-validation-summary="All" class="text-danger"></div>
        <input type="hidden" asp-for="TaxNumber" />
        
        <div class="form-group mb-3">
            <label asp-for="Name">İsim</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Surname">Soyisim</label>
            <input asp-for="Surname" class="form-control" />
            <span asp-validation-for="Surname" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="DailysSalary">Günlük Ücret</label>
            <input asp-for="DailysSalary" class="form-control" />
            <span asp-validation-for="DailysSalary" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="EntryDate">Giriş Tarihi</label>
            <input asp-for="EntryDate" type="date" class="form-control" />
            <span asp-validation-for="EntryDate" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary mb-2 w-100">Güncelle</button>
         <a href="@Url.Action("Index", "Employee")" class="btn w-100 btn-primary">Geri Dön</a>
    </form>
</div>
